<%- include("../partials/head") %>

<head />

<body>
    <%- include("../partials/nav") %>
        <div class="d-flex">


            <div class="container-fluid px-5 pt-3">
                <% if(cart[0].products.length !== 0) { %>
                        
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Imagen</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cart.products.forEach(product=> { %>
                                <tr>
                                    <th scope="row">
                                        <%= product.id %>
                                    </th>
                                    <td>
                                        <%= product.nombre %>
                                    </td>
                                    <td>
                                        <%= product.precio %>
                                    </td>
                                    <td><img src="<%= product.urlImagen %>" class="w-25 h-auto"></td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>


                <% } else { %>

                    <div class="" >
                        <p>You don't have any products in the cart, <a href="/">let's change that</a></p>
                    </div>

                <% } %>
            </div>

        </div>


        <%- include("../partials/boostrapScrips") %>
</body>

</html>